    <script>
         function abrirPopup() {
            document.getElementById('popup').style.display = 'flex';
        }

        function fecharPopup() {
            document.getElementById('popup').style.display = 'none';
        }

        function ativarCanvas() {
            var canvas = document.getElementById('canvas');
            var saudacaoElement = document.getElementById('saudacao');
            var headerElement = document.getElementById('meuHeader');
            var footerElement = document.getElementById('meuFooter');
            var div1 = document.getElementById('div1');
            var div2 = document.getElementById('div2');
            var div3 = document.getElementById('div3');
            var div4 = document.getElementById('div4');
            
            
            saudacaoElement.style.display = 'none';
            headerElement.style.display = 'none';
            footerElement.style.display = 'none';
            div1.style.display = 'none';
            div2.style.display = 'none';
            div3.style.display = 'none';
            div4.style.display = 'none';
        
            canvas.style.display = 'block';
            var canvas = document.getElementById('canvas');

            var context = canvas.getContext('2d');
            var W = window.innerWidth;
            var H = window.innerHeight;

            canvas.width = W;
            canvas.height = H;

            var fontSize = 16;
            var columns = Math.floor(W / fontSize);
            var drops = [];
            for (var i = 0; i < columns; i++) {
                drops.push(0);
            }
            var str = "JavaScript Hacking Effect";

            context.fillStyle = "#00cc33";
            function draw() {
                context.fillStyle = "rgba(0,0,0,0.05)";
                context.fillRect(0, 0, W, H);
                context.font = "700 " + fontSize + "px";
                context.fillStyle = "#00cc33";

                for (var i = 0; i < columns; i++) {
                    var index = Math.floor(Math.random() * str.length);
                    var x = i * fontSize;
                    var y = drops[i] * fontSize;
                    context.fillText(str[index], x, y);

                    if (y >= canvas.height && Math.random() > 0.99) {
                        drops[i] = 0;
                    }
                    drops[i]++;
                }
            }

            draw();
            setInterval(draw, 35);

            setTimeout(function () {
                canvas.style.display = 'none';  
                headerElement.style.display = 'flex';
                footerElement.style.display = 'flex';
                div1.style.display = 'block';
                div2.style.display = 'block';
                div3.style.display = 'block';
                div4.style.display = 'block';
                headerElement.style.backgroundImage = "url(img/i3.jpg)";
                footerElement.style.backgroundImage = "url(img/i3.jpg)";
                document.body.style.backgroundImage = "url(img/ti.jpg)";
                }, 5000);
            
        }

        function obterNome() {
            return nome = window.prompt('SEJA BEM VINDO, QUAL SEU NOME?')
        }

        function exibirSaudacao() {
            var nome = obterNome();
            var saudacao = '<p>Olá ' + nome + '...                               ' + ' ' +                               
                      'Me chamo Maikel Wehn...                    '+' sou um entusiasta da técnologia...            '+
                      ' Desde criança a técnologia me dispertou curiosidade,          '+' me levando a estudar mecânica,       '+'  elétrica,          '+' eletrônica        '+' e automação...        '+
                      ' Com o tempo vi na informática uma paixão        '+' que me levou a pesquisar sobre hardwere e redes       '+
                      ' me ajudando no meu desenvolvimento...             '+' Porém,       '+' devido ao avanço da técnologia,      '+' eu vi a necessidade de me aprofundar na àrea de desenvolvimento,      '+
                      ' que me fez procurar a graduação em Técnologia da Informação,      '+' onde descobri uma nova paixão,      '+
                      ' que me faz ficar horas e mais horas em frente à tela criando,      '+' brincando com códigos,      '+' sem que ao menos me canse,      '+
                      ' e foi por este sentimento de entusiasmo e até mesmo nostalgia  que criei este site portfólio em tema de DOS,      '+' espero que goste...       '+' Obrigado pela visita.      '+
                      ' Ah...       '+' se quiser saber um pouco mais sobre meus conhecimentos,      '+' clique em Skils.</p>';

        
            document.getElementById("saudacao").innerHTML = saudacao;
        }

        window.onload = exibirSaudacao;

        function typeWriter(elemento) {
            const textoArray = elemento.innerHTML.split('');
            elemento.innerHTML = '';
            textoArray.forEach((letra, i) => {
                setTimeout(() => elemento.innerHTML += letra, 100 * i);
            });
        }

        setTimeout(function () {
            const titulo = document.querySelector('p');
            typeWriter(titulo);
        }, 1000);
    </script>
